<Page
    x:Class="SalaryTrack.View.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SalaryTrack.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="367*"/>
            <RowDefinition Height="713*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="FirstNameTextBlock" Text="First Name" Margin="0,0,400,0" Width="200" Height="50" FontSize="24"></TextBlock>
        <TextBlock x:Name="LastNameTextBlock" Text="Last Name" Margin="600,0,0,0" Width="200" Height="50" FontSize="24"></TextBlock>
        
        <TextBlock Text="ProfilePage"
                   FontSize="24"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center" Margin="0,156.577,0,0" Grid.Row="1"/>
    </Grid>
</Page>
