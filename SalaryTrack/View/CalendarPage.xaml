<Page
    x:Class="SalaryTrack.View.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SalaryTrack.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Width="1820">
        <CalendarView Width="1400"
                      Height="700"
                      BorderThickness="10,10,10,10" 
                      RequestedTheme="Default"
                      Margin="175,0,0,350"
                      x:Name="Calendar">

        </CalendarView>

        <TextBlock Text="Worked Hours"
                 Margin="0,500,1200,0"
                 Width="200" 
                 Height="50"
                 FontSize="20"
                 >
            
        </TextBlock>
        <TextBlock Text="Expected salary"
                 Margin="0,500,600,0"
                 Width="200" 
                 Height="50"
                 FontSize="20"
                 >

        </TextBlock>

        <TextBlock Text="After Taxes"
                 Margin="0,500,0,0"
                 Width="200" 
                 Height="50"
                 FontSize="20"
                 >

        </TextBlock>

    </Grid>
</Page>
